<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_children_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher_doctor" />

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_children_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Children Name"
                android:textSize="17sp"
                android:textStyle=""/>

            <TextView
                android:id="@+id/tv_item_children_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOB"
                android:textSize="10sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tv_item_children_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="10sp"
                android:textStyle="normal"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:gravity="end"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_item_children_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="10sp"
                android:textStyle="normal"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/idlColorView"
        android:layout_marginTop="8dp" />

</LinearLayout>